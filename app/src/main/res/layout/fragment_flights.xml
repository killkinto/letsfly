<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_main"
    tools:context="">

    <data>
        <variable name="viewmodel"
                  type="com.killkinto.letsfly.flight.FlightViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TimePicker
                android:id="@+id/tpk_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_time"
                app:layout_constraintTop_toBottomOf="@+id/txt_time"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/edt_stops"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tpk_time">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/stops"
                    android:text="@={viewmodel.stops}"
                    android:textColor="@color/colorPrimaryDark"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_order_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/order_by"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_stops"/>

        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_order_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_order_by"
                app:layout_constraintTop_toBottomOf="@+id/txt_order_by"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_flights"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spn_order_by"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>